@model List<BooksWebAPI.Client.Models.BookVm>

@{
    ViewBag.Title = "Sigma Itc - Ivan Prgomet";
}

@using (Html.BeginForm("GetById", "Book"))
{
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h4>Search by Book Id</h4>
                <div id="custom-search-input">
                    <div class="input-group col-md-12">
                        <input type="text" class="form-control input-sm" name="id" placeholder="Search" />

                        <span class="input-group-btn">
                            <button class="btn btn-info btn-sm" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </span>

                    </div>
                </div>
            </div>
        </div>
    </div>
}

@using (Html.BeginForm("GetByTitle", "Book"))
{
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h4>Search by Book title</h4>
                <div id="custom-search-input">
                    <div class="input-group col-md-12">
                        <input type="text" class="form-control input-sm" name="title" placeholder="Search" />

                        <span class="input-group-btn">
                            <button class="btn btn-info btn-sm" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </span>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
<style>
    #custom-search-input {
        padding: 3px;
        border: solid 1px #E4E4E4;
        border-radius: 6px;
        background-color: #fff;
    }

        #custom-search-input input {
            border: 0;
            box-shadow: none;
        }

        #custom-search-input button {
            margin: 2px 0 0 0;
            background: none;
            box-shadow: none;
            border: 0;
            color: #666666;
            padding: 0 8px 0 10px;
            border-left: solid 1px #ccc;
        }

            #custom-search-input button:hover {
                border: 0;
                box-shadow: none;
                border-left: solid 1px #ccc;
            }

        #custom-search-input .glyphicon-search {
            font-size: 23px;
        }
</style>


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                <h1 class="panel-title list-panel-title">Result</h1>
            </div>
            <div class="panel-body">
                <table id="assets-data-table"
                       class="table table-striped table-bordered"
                       style="width: 100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Description</th>
                            <th>Genre</th>
                            <th>Published</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var book in Model)
                            {
                                <tr>
                                    <td>@book.Id</td>
                                    <td>@book.Title</td>
                                    <td>@book.Author</td>
                                    <td>@book.Description</td>
                                    <td>@book.Genre</td>
                                    <td>@book.PublishDate.ToString("dd MMMM yyyy")</td>
                                    <td>@book.Price</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
