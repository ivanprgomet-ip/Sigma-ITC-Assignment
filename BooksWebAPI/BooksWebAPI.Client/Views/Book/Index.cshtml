@model List<BooksWebAPI.Client.Models.BookVm>

@{
    ViewBag.Title = "Sigma Itc - Ivan Prgomet";
}

<h1 class="page-header">Search</h1>

<div class="container">
    <div class="row">

        @using (Html.BeginForm("GetById", "Book"))
        {
            <div class="col-md-4">
                <div id="custom-search-input">
                    <div class="input-group col-md-12">
                        <input type="text" class="form-control input-lg" name="id" placeholder="Search book by id" />

                        <span class="input-group-btn">
                            <button class="btn btn-info btn-sm" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </span>

                    </div>
                </div>
            </div>
        }

        @using (Html.BeginForm("GetByTitle", "Book"))
        {
            <div class="col-md-4">
                <div id="custom-search-input">
                    <div class="input-group col-md-12">
                        <input type="text" class="form-control input-lg" name="title" placeholder="Search book(s) by title" />

                        <span class="input-group-btn">
                            <button class="btn btn-info btn-sm" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </span>

                    </div>
                </div>
            </div>
        }

        @using (Html.BeginForm("GetByGenre", "Book"))
        {
            <div class="col-md-4">
                <div id="custom-search-input">
                    <div class="input-group col-md-12">
                        <input type="text" class="form-control input-lg" name="genre" placeholder="Search book(s) by genre" />

                        <span class="input-group-btn">
                            <button class="btn btn-info btn-sm" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </span>

                    </div>
                </div>
            </div>
        }


    </div>
</div>


    <h1 class="page-header">Results</h1>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <td> Id </td>
                <td> Title </td>
                <td> Author</td>
                <td> Description</td>
                <td> Genre</td>
                <td> Published</td>
                <td> Price</td>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var book in Model)
                {
                    <tr>
                        <td>@book.Id</td>
                        <td>@book.Title</td>
                        <td>@book.Author</td>
                        <td>@book.Description</td>
                        <td>@book.Genre</td>
                        <td>@book.PublishDate.ToString("dd MMMM yyyy")</td>
                        <td>@book.Price</td>
                    </tr>
                }
            }
        </tbody>
    </table>