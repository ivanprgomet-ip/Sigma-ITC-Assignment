@model List<BooksWebAPI.Client.Models.BookVm>

@{
    ViewBag.Title = "Sigma ITC Assignment";
}

<div>
    @using (Html.BeginForm("GetByTitle", "Book"))
    {
        <input type="text" name="title" placeholder="Enter title" />
        <input id="btnTitle" type="submit" value="Search by title" />
    }
</div>

<div>
    @using (Html.BeginForm("GetById", "Book"))
    {
        <input type="text" name="id" placeholder="Enter Id" />
        <input id="btnId" type="submit" value="Search by Id" />
    }
</div>


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                <h1 class="panel-title list-panel-title">Result</h1>
            </div>
            <div class="panel-body">
                <table id="assets-data-table"
                       class="table table-striped table-bordered"
                       style="width: 100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Description</th>
                            <th>Genre</th>
                            <th>Published</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var book in Model)
                            {
                                <tr>
                                    <td>@book.Id</td>
                                    <td>@book.Title</td>
                                    <td>@book.Author</td>
                                    <td>@book.Description</td>
                                    <td>@book.Genre</td>
                                    <td>@book.PublishDate.ToString("dd MMMM yyyy")</td>
                                    <td>@book.Price</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>